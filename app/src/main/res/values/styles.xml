<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name = "colorPrimary">@color/tlb_bg</item>
        <item name = "colorPrimaryDark">@color/tlb_bg</item>
        <item name = "colorAccent">@color/colorAccent</item>

    </style>
    <style name="overflowerMenuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:name">@string/app_name</item>
        <item name = "android:actionMenuTextColor">@color/darkGray</item>
        <item name = "android:textColorSecondary">@color/colorPrimary</item>
        <!-- 是否覆盖overflow按钮，默认为true，即盖住Toolbar -->
        <item name = "overlapAnchor">false</item>


    </style>

</resources>
